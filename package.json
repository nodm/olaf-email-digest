{
  "name": "olaf-email-digest",
  "version": "1.0.0",
  "description": "CLI app that reads Gmail newsletters, generates AI-powered digest, and emails summary",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "digest": "node --env-file=.env --import=tsx src/index.ts",
    "auth": "node --env-file=.env --import=tsx scripts/auth.ts",
    "lint": "biome check .",
    "format": "biome format --write ."
  },
  "keywords": [
    "gmail",
    "digest",
    "newsletter",
    "ai"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.35",
    "ai": "^6.0.68",
    "googleapis": "^171.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/node": "^25.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
